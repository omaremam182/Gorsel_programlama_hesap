<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleCalculator.MainPage"
             Title="Calculator">

    <VerticalStackLayout Padding="20">

        
        <Entry x:Name="resultDisplay" FontSize="24" HorizontalTextAlignment="End" IsReadOnly="True" Text="0" />

        
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" ColumnDefinitions="*, *, *, *" Padding="10" RowSpacing="10" ColumnSpacing="10">
           
            <Button Text="7" Grid.Row="0" Grid.Column="0" Clicked="NumberButton_Click"/>
            <Button Text="8" Grid.Row="0" Grid.Column="1" Clicked="NumberButton_Click"/>
            <Button Text="9" Grid.Row="0" Grid.Column="2" Clicked="NumberButton_Click"/>
            <Button Text="÷" Grid.Row="0" Grid.Column="3" Clicked="OperatorButton_Click"/>

     
            
            <Button Text="4" Grid.Row="1" Grid.Column="0" Clicked="NumberButton_Click"/>
            <Button Text="5" Grid.Row="1" Grid.Column="1" Clicked="NumberButton_Click"/>
            <Button Text="6" Grid.Row="1" Grid.Column="2" Clicked="OperatorButton_Click"/>
            <Button Text="×" Grid.Row="1" Grid.Column="3" Clicked="OperatorButton_Click"/>

            <Button Text="1" Grid.Row="2" Grid.Column="0" Clicked="NumberButton_Click"/>
            <Button Text="2" Grid.Row="2" Grid.Column="1" Clicked="NumberButton_Click"/>
            <Button Text="3" Grid.Row="2" Grid.Column="2" Clicked="NumberButton_Click"/>
            <Button Text="-" Grid.Row="2" Grid.Column="3" Clicked="OperatorButton_Click"/>

            <Button Text="C" Grid.Row="3" Grid.Column="0" Clicked="ClearButton_Click"/>
            <Button Text="0" Grid.Row="3" Grid.Column="1" Clicked="NumberButton_Click"/>
            <Button Text="=" Grid.Row="3" Grid.Column="2" Clicked="EqualsButton_Click"/>
            <Button Text="+" Grid.Row="3" Grid.Column="3" Clicked="OperatorButton_Click"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
